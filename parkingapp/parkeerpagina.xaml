<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="parkingapp.ParkeerPage"
             Title="ParkeerPage">
    <VerticalStackLayout>
        <Label 
            Text="Parkeer pagina"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Border
        	Stroke="LightGray"
	        Background="White"
	        StrokeThickness="2"
	        Padding="30,20"
	        HorizontalOptions="Center"
            StrokeShape="RoundRectangle 15">

            <VerticalStackLayout>
                <Picker
                    Title="Parking">
                </Picker>
                <Button
                    Text="Parkeer">
                    
                </Button>
            </VerticalStackLayout>
        </Border>
    </VerticalStackLayout>
</ContentPage>